<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:background="@color/colorPrimary"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recycler_container"
        android:layout_below="@+id/toolbar">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:paddingTop="@dimen/medium_padding"
            android:visibility="visible"
            android:id="@+id/recycler_view"/>

    </RelativeLayout>







    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/toolbar"
        android:layout_margin="@dimen/default_margin"
        android:id="@+id/main_container"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bottomContainer">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/transpatent_card">

                <View
                    android:layout_width="62dp"
                    android:layout_height="@dimen/block_height"
                    android:background="@android:color/transparent"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/block_height"
                    android:id="@+id/bottomCard"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/top_container"
                        android:background="@android:color/white">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textSize="20sp"
                                android:text="Present"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Present"
                                android:textSize="20sp"
                                android:id="@+id/present"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textSize="20sp"
                                android:text="Overtime"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Present"
                                android:textSize="20sp"
                                android:id="@+id/over_time"/>

                        </LinearLayout>
                    </LinearLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>



            <ImageView
                android:layout_marginTop="@dimen/default_margin"
                android:id="@+id/indicator"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_below="@+id/transpatent_card"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:src="@drawable/down_arrow"
                android:background="@drawable/circle_colored"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/topContainer">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:id="@+id/topCard"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_ripple"
                        android:clickable="true"
                        android:text="@string/prev"
                        android:textSize="24sp"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:id="@+id/prev"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/medium_padding"
                        android:layout_toEndOf="@+id/prev"
                        android:layout_toStartOf="@+id/next"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:text="status"
                        android:id="@+id/status"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_ripple"
                        android:text="@string/next"
                        android:textSize="24sp"
                        android:clickable="true"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/next"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/state"
                android:layout_marginTop="@dimen/default_margin"
                android:layout_width="@dimen/block_height"
                android:layout_height="@dimen/block_height"
                android:background="@color/statusColor"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:shadowColor="#222545"
                android:shadowDy="5"
                android:shadowDx="5"
                android:text="Date"
                android:layout_below="@+id/topCard"/>

        </RelativeLayout>












    </RelativeLayout>







</RelativeLayout>